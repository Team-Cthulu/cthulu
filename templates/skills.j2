{% extends 'layout.html' %}

{% block body %}
<table class="center">
    <thead>
    <tr>
        <th>ID</th>
        <th>Skill Name</th>
    </tr>
    <tbody>
    {% for item in skills %}
    <tr>
        <td>{{item['skill_id']}}</td>
        <td>{{item['skill_name']}}</td>
    </tr>
    {% endfor %}
    </table>
    <div>
        <form method="POST" id="addSkill">
            <legend><strong>Add Skill</strong></legend>
                <fieldset class="fields">
                    <label> Name </label> <input type="text" name"skill_name">
                </fieldset>
                    <input class="btn" type="submit" id="addSkill" value="Add Skill">
        </form>
    </div>
{% endblock%}