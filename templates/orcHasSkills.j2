{% extends 'layout.html' %}

{% block body %}
<table class="center">
    <thead>
    <tr>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Skill</th>
        <th>Skill Level</th>
    </tr>
    <tbody>
    {% for item in orc_skills %}
    <tr>
        <td>{{item['orc_skill_id']}}</td>
        <td>{{item['first_name']}}</td>
        <td>{{item['last_name']}}</td>
        <td>{{item['skill']}}</td>
        <td>{{item['skill_level']}}</td>
    </tr>
    {% endfor %}
    </table>
    <div>
        <form method="POST" id="addOrcItem">
            <legend><strong>Work work</strong></legend>
                <fieldset class="fields">
                    <label> Orc </label> <select name="orc_id">
                        <option value="0">&nbsp;</option>
                        <option value="1">Orgrim Warhammer</option>
                        <option value="2">Little Peon</option>
                        <option value="3">Mother Theresa</option>
                        </select>
                    <label> Skill </label> <select name="skill_id">
                        <option value="0">&nbsp;</option>
                        <option value="1">Fighting</option>
                        <option value="2">Fletching</option>
                        <option value="3">Cooking</option>
                        </select>
                    <label> Skill Level </label> <input type="text" name"skill_level">
                </fieldset>
                    <input class="btn" type="submit" id="addItem" value="Add Skill">
        </form>
    </div>
{% endblock%}