{% extends 'layout.html' %}

{% block body %}
<table class="center">
    <thead>
    <tr>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Skill</th>
        <th>Skill Level</th>
    </tr>
    <tbody>
    {% for item in orc_skills %}
    <tr>
        <td>{{item[0]}}</td>
        <td>{{item[1]}}</td>
        <td>{{item[2]}}</td>
        <td>{{item[3]}}</td>
        <td>{{item[4]}}</td>
        <td><a href="edit_orc_skill/{{item[0]}}" class="btn btn-default">Edit</a><td>
        <td><a href="delete_orc_skill/{{item[0]}}" class="btn btn-default">Delete</a></td>
    </tr>
    {% endfor %}
    </table>
    <div>
        <form method="POST" id="addOrcItem">
            <legend><strong>Work work</strong></legend>
                <fieldset class="fields">
                    <label> Orc </label> <select name="orc_id">
                        <option value="">&nbsp;</option>
                        {% for orc in orcs %}
                        <option value="{{orc[0]}}">{{orc[1]}} {{orc[2]}}</option>
                        {% endfor %}
                        </select>
                    <label> Skill </label> <select name="skill_id">
                        <option value="">&nbsp;</option>
                        {% for skill in skills %}
                        <option value="{{skill[0]}}">{{skill[1]}}</option>
                        {% endfor %}
                        </select>
                    <label> Skill Level </label> <input type="text" name="skill_level">
                </fieldset>
                    <input class="btn" type="submit" id="addItem" value="Add Skill">
        </form>
    </div>
{% endblock%}