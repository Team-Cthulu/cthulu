{% extends 'layout.html' %}

{% block body %}
<table class="center">
    <thead>
    <tr>
        <th>ID</th>
        <th>Type</th>
    </tr>
    <tbody>
   {% for item in item_types %}
    <tr>
        <td>{{item['item_type_id']}}</td>
        <td>{{item['item_type']}}</td>
    </tr>
    {% endfor %}
    </table>
    <div>
        <form method="POST" id="addItemType">
            <legend><strong>Add Item Type</strong></legend>
                <fieldset class="fields">
                    <label> Item Type </label> <input type="text" name"item_type">
                </fieldset>
                    <input class="btn" type="submit" id="addItemType" value="Add Item Type">
        </form>
    </div>
{% endblock%}