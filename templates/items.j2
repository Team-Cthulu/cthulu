{% extends 'layout.html' %}

{% block body %}
<table class="center">
    <thead>
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Color</th>
        <th>Crafting Year</th>
        <th>Size</th>
        <th>Type</th>
    </tr>
    <tbody>
    {% for item in items %}
    <tr>
        <td>{{item['item_id']}}</td>
        <td>{{item['item_name']}}</td>
        <td>{{item['item_color']}}</td>
        <td>{{item['item_year']}}</td>
        <td>{{item['item_size']}}</td>
        <td>{{item['item_type_id']}}</td>
    </tr>
    {% endfor %}
    </table>
{% endblock%}