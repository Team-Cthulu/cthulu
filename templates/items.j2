{% extends 'layout.html' %}

{% block body %}
<table class="center">
    <thead>
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Color</th>
        <th>Crafting Year</th>
        <th>Size</th>
        <th>Type</th>
    </tr>
    <tbody>
    {% for item in items %}
    <tr>
        <td>{{item[0]}}</td>
        <td>{{item[1]}}</td>
        <td>{{item[2]}}</td>
        <td>{{item[3]}}</td>
        <td>{{item[4]}}</td>
        <td>{{item[5]}}</td>
    </tr>
    {% endfor %}
    </table>
    <div>
        <form method="POST" id="addItem">
            <legend><strong>Add Item</strong></legend>
                <fieldset class="fields">
                    <label> Name </label> <input type="text" name="item_name">
                    <label> Color </label> <input type="text" name="item_color">
                    <label> Year </label> <input type="text" name="item_year">
                    <label> Size </label> <input type="text" name="item_size">
                    <label> Type </label> <select name="item_type_id">
                        <option value="">&nbsp;</option>
                        {% for item_type in item_types %}
                        <option value="{{item_type[0]}}">{{item_type[1]}}</option>
                        {% endfor %}
                        </select>
                </fieldset>
                    <input class="btn" type="submit" id="addItem" value="Add Item">
        </form>
    </div>
{% endblock%}